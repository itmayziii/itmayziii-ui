{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "useDefineForClassFields": false,
    "lib": [
      "DOM",
      "ES2022"
    ],
    "plugins": [
      {
        "name": "@astrojs/ts-plugin"
      }
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["src/graphql/generated/**/*"]
}
