---
const barClass = 'bg-white p-0 w-6 h-1 block absolute rounded'
---

<input type='checkbox' id='hamburger-menu' class='iii-hamburger-input hidden'>
<label for='hamburger-menu' class='iii-hamburger-icon cursor-pointer'>
  <span class='hamburger block h-6 w-6 relative'>
    <span class:list={['iii-hamburger-bar iii-hamburger-bar1 top-0', barClass]}></span>
    <span class:list={['iii-hamburger-bar iii-hamburger-bar2 top-2.5', barClass]}></span>
    <span class:list={['iii-hamburger-bar iii-hamburger-bar3 right-0 top-2.5', barClass]}></span>
    <span class:list={['iii-hamburger-bar iii-hamburger-bar4 bottom-0', barClass]}></span>
  </span>
</label>

<style is:global>
  .iii-hamburger-bar {
    transition: all 0.4s ease-in-out;
  }

  .iii-hamburger-bar1 {
    transform-origin: 5%;
  }

  .iii-hamburger-bar4 {
    transform-origin: 5%;
  }

  .iii-hamburger-input:checked + .iii-hamburger-icon .iii-hamburger-bar1 {
    transform: rotate(45deg);
    height: 3px;
    width: 34px;
  }

  .iii-hamburger-input:checked + .iii-hamburger-icon .iii-hamburger-bar2 {
    transform: rotate(-45deg);
    height: 3px;
    background-color: transparent;
  }

  .iii-hamburger-input:checked + .iii-hamburger-icon .iii-hamburger-bar3 {
    transform: rotate(45deg);
    height: 3px;
    background-color: transparent;
  }

  .iii-hamburger-input:checked + .iii-hamburger-icon .iii-hamburger-bar4 {
    transform: rotate(-45deg);
    height: 3px;
    width: 34px;
  }
</style>
