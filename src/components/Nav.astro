---
import HamburgerMenu from './HamburgerMenu.astro'

interface Props {
  links: {
    label
    link
  }[]
}

const { links } = Astro.props<Props>
---

<nav class='text-white'>
  <HamburgerMenu />
  <ul class:list={[
    'iii-nav-list w-full max-w-xs fixed right-0 h-full bg-background overflow-hidden px-6 py-4',
    'z-40 transition-transform translate-x-full capitalize',
    'lg:static lg:h-auto lg:max-w-none lg:translate-x-0 lg:transition-none lg:p-0'
  ]}>
    {links.map(link => (
      <li class='mt-2 p-2 lg:inline-block lg:mt-0 lg:ml-2'>
        <a href={link.link}>{link.label}</a>
      </li>
    ))}
  </ul>
</nav>

<style is:global>
  .iii-nav-list {
    top: 48px;
  }

  .iii-hamburger-input:checked ~ .iii-nav-list {
    transform: translate(0);
  }
</style>
