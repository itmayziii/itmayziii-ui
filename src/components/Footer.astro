---
import Icon from './Icon.astro'

interface Props {
  class: string
  socials: {
    icon: string
    link: string
  }[]
}
const { class: className, socials } = Astro.props
---

<footer class:list={['py-4 px-6', className]}>
  <ul class='flex justify-center'>
    {socials.map((social, i) => (
      <li class:list={{ 'ml-8': i !== 0 }}>
        <a href={social.link}>
          <Icon name={social.icon} class='w-10 h-10' />
        </a>
      </li>
    ))}
  </ul>
</footer>
