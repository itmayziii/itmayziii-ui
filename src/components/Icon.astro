---
import ApiIcon from './icons/ApiIcon.astro'
import CodeIcon from './icons/CodeIcon.astro'
import ComputerIcon from './icons/ComputerIcon.astro'
import GithubIcon from './icons/GithubIcon.astro'
import TwitterIcon from './icons/TwitterIcon.astro'
import LinkedInIcon from './icons/LinkedInIcon.astro'
import JavaScriptIcon from './icons/JavaScriptIcon.astro'
import TypeScriptIcon from './icons/TypeScriptIcon.astro'
import NodeJsIcon from './icons/NodeJsIcon.astro'
import VueIcon from './icons/VueIcon.astro'
import ReactIcon from './icons/ReactIcon.astro'
import AngularIcon from './icons/AngularIcon.astro'
import GcpIcon from './icons/GcpIcon.astro'
import AstroIcon from './icons/AstroIcon.astro'
import NextJsIcon from './icons/NextJsIcon.astro'
import GoIcon from './icons/GoIcon.astro'
import DockerIcon from './icons/DockerIcon.astro'
import JavaIcon from './icons/JavaIcon.astro'
import RubyIcon from './icons/RubyIcon.astro'
import PhpIcon from './icons/PhpIcon.astro'
import TerraformIcon from './icons/TerraformIcon.astro'

interface Props {
  name: string
  class: string
}
const { name, class: className } = Astro.props<Props>

const icons = {
  api: ApiIcon,
  code: CodeIcon,
  computer: ComputerIcon,
  github: GithubIcon,
  twitter: TwitterIcon,
  linkedIn: LinkedInIcon,
  javascript: JavaScriptIcon,
  typescript: TypeScriptIcon,
  nodejs: NodeJsIcon,
  vue: VueIcon,
  react: ReactIcon,
  angular: AngularIcon,
  gcp: GcpIcon,
  astro: AstroIcon,
  nextjs: NextJsIcon,
  go: GoIcon,
  docker: DockerIcon,
  java: JavaIcon,
  ruby: RubyIcon,
  php: PhpIcon,
  terraform: TerraformIcon
}
const Icon = icons[name]
---

{Icon !== undefined && <Icon class={className} />}
