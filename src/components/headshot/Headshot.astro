---
interface Props {
  url
  alt
  className
}
const { url, alt, class: className } = Astro.props
---

<itmayziii-headshot>
  <button class={className} type='button' data-js-headshot-btn>
    <img
      class='headshot rounded-full w-full max-w-xs h-auto border-primary border-8 grayscale'
      src={url}
      alt={alt}
      data-js-headshot-img
    />
  </button>
</itmayziii-headshot>

